@model List<MySneakerWishList.Models.Shoe>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Category</td>
    </tr>

    @foreach (var shoe in Model)
    {
        <tr>
            <td>@shoe </td>
            <td>@shoe.Description</td>
            <td>@shoe.Category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No shoes yet!</p>
}

<p><a asp-controller="Shoe" asp-action="Add">Add </a></p> | <p><a asp-controller="Shoe" asp-action="Remove">Remove</a></p>
