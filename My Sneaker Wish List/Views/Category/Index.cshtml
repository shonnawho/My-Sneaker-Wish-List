@model List<MySneakerWishList.Models.ShoeCategory>
@{
    ViewData["Title"] = "Index";
}

<h2>Categories</h2>

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>


<ul>

    @foreach (var category in Model)
    {
        <li>

            <a asp-controller="Shoe"
               asp-action="Category"
               asp-route-id="@category.ID">@category.Name</a>

        </li>


    }


</ul>